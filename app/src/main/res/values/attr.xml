<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText" format="string"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>
    <attr name="image" format="reference"/>
    <attr name="imageScaleType">
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>

    <declare-styleable name="CustomTitleView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="imgTitleText" format="string"/>
        <attr name="imgTitleTextColor" format="color"/>
        <attr name="imgTitleTextSize" format="dimension"/>
        <attr name="image"/>
        <attr name="imageScaleType"/>
    </declare-styleable>

    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomVolumControlBar">
        <attr name="volunmBaseColor" format="color"/>
        <attr name="volunmOverColor" format="color"/>
        <attr name="volumCircleWidth" format="dimension"/>
        <attr name="dotCount" format="integer"/>
        <attr name="splitSize" format="integer"/>
        <attr name="bg" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BitmapShadowView">
        <attr name="src" format="reference"/>
        <attr name="shadowDx" format="integer"/>
        <attr name="shadowDy" format="integer"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="float"/>
    </declare-styleable>

    <attr name="selectColor" format="color"/>
    <attr name="unselectColor" format="color"/>
    <attr name="underlineColor" format="color"/>
    <attr name="backgroudColor" format="color"/>
    <attr name="texts" format="string"/>
    <attr name="tabTextSize" format="dimension"/>

    <declare-styleable name="SelectLayout">
        <attr name="selectColor"/>
        <attr name="unselectColor"/>
        <attr name="underlineColor"/>
        <attr name="backgroudColor"/>
        <attr name="texts"/>
        <attr name="tabTextSize"/>
    </declare-styleable>

    <declare-styleable name="NewSelectLayout">
        <attr name="selectColor"/>
        <attr name="unselectColor"/>
        <attr name="underlineColor"/>
        <attr name="backgroudColor"/>
        <attr name="texts"/>
        <attr name="tabTextSize"/>
    </declare-styleable>

</resources>